# Filename: .flake8
[flake8]
# Comma-separated list of directories/files/patterns to exclude
# Standard exclusions: venv, build artifacts, caches, git history
exclude =
    .git,
    __pycache__,
    venv,
    .venv,
    build,
    dist,
    *.egg-info,
    .mypy_cache,
    .pytest_cache
    # Add any other specific directories if needed, e.g., docs/_build

max-line-length = 88
extend-ignore = 
    E203,  # conflicts with Blackâ€™s spacing
    W503   # prefer hanging indent

# Optional: Ignore specific error codes project-wide if necessary
# (Use specific # noqa comments in code for specific lines instead, if possible)
# ignore = E203, W503, E231